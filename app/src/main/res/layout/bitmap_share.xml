<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:define="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.lechuang.lqsq.widget.SquareImageView
                android:id="@+id/share_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@color/black" />

            <LinearLayout
                android:id="@+id/ll_bitmap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="18dp"
                android:paddingBottom="30dp"
                android:paddingTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.lechuang.lqsq.widget.views.SpannelTextViewShareProduct
                        android:id="@+id/spannelTextView"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        define:drawText="333333344444444445555555555555554"
                        define:shopType="1" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:id="@+id/layout_quan"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_share_quanhoujia"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="券后价"
                            android:textColor="@color/main"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/preferentialPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:gravity="center"
                            android:text=" ¥299.00"
                            android:textColor="@color/main"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="现价 ¥ "
                            android:textColor="@color/c9c9c9c"
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:textColor="@color/c9c9c9c"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="126dp"
                    android:layout_height="126dp"
                    android:gravity="center"
                    android:background="@drawable/bg_code">
                    <ImageView
                        android:id="@+id/code"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@color/black" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>