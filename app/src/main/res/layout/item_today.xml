<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="160dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical">

    <com.lechuang.lqsq.widget.RoundedImageView
        android:id="@+id/todayImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/jinri"
        app:corner_radius="6dp"
        app:oval="false" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shoptype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zhuan_taobao" />

        <TextView
            android:id="@+id/todayTitle"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginLeft="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="商品标题"
            android:textColor="#4A4A4A"
            android:textSize="11sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:text="券后价"
        android:textColor="#929292"
        android:textSize="11dp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/todayPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:text="299"
            android:textColor="@color/color_ff5c19"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/oldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="299"
            android:textColor="#9C9C9C"
            android:textSize="14dp" />
    </RelativeLayout>

</LinearLayout>