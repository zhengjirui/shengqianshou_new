<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        >
        <com.androidkun.xtablayout.XTabLayout
            android:id="@+id/tl_nav_shouji_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:xTabMode="fixed"
            app:xTabGravity="1"
            app:xTabIndicatorColor="@color/white"
            app:xTabIndicatorHeight="1dp"
            app:xTabIndicatorWidth="20dp"
            app:xTabSelectedTextColor="@color/white"
            app:xTabTextColor="@color/color_c9c9c9"
            app:xTabTextSize="15sp"
            app:xTabSelectedTextSize="15sp"/>
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_shouji_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>